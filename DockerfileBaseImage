FROM mcr.microsoft.com/dotnet/aspnet:5.0-buster-slim
WORKDIR /app
EXPOSE 80
EXPOSE 443
RUN apt-get update
RUN apt-get install -y python3 python3-pip python3-dev python3-setuptools g++ zlib1g libopenjp2-tools libboost-python-dev \
    openjdk-11-jdk python-pil libtiff5-dev libjpeg62-turbo-dev libopenjp2-7-dev zlib1g-dev \
    libfreetype6-dev liblcms2-dev libwebp-dev tcl8.6-dev tk8.6-dev python3-tk \
    libharfbuzz-dev libfribidi-dev libxcb1-dev && rm -rf /var/lib/apt/lists/*
RUN pip3 install pyspark pillow pandas

