<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="3"
        android:digits="0123456789"
        android:key="daily"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Goal for daily amount of hours out in the green"
        android:title="Daily goal" />
    <EditTextPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="15"
        android:digits="0123456789"
        android:key="weekly_hours_pref"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Goal for weekly amount of hours out in the green"
        android:title="Weekly goal" />
</PreferenceScreen>